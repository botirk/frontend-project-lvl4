{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "functional",
        "eslint-plugin-testing-library"
    ],
    "rules": {
        "import/extensions": 0,
        "no-use-before-define": 1,
        "import/no-cycle": 1,
        "react/prop-types": 0
    }
}
